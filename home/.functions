    myip () { 
        interface=${1:-en0}
        ipconfig getifaddr $interface 
    }

    myextip () {
        curl ipecho.net/plain ; echo
    }

 #   ----------------------------------------
 #   4.  CONTAINER MANAGEMENT
 #   ----------------------------------------

    dkrstoprm() {
        if [ $1 ]; then
            echo "Stopping container: $1"
            docker stop $1
            echo "Removing container: $1"
            docker rm $1
        else
            echo "Must specify a container name"
        fi
     }
